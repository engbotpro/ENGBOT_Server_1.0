# Configurações do Banco de Dados
# Local: postgresql://username:password@localhost:5432/engbot
# Docker: postgresql://engbot:engbot_password@db:5432/engbot
DATABASE_URL="postgresql://username:password@localhost:5432/engbot"

# Configurações do Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Configurações do JWT
JWT_SECRET="your-jwt-secret-key"

# Configurações de Email
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# URL do backend (usada pelo Google OAuth como callback)
# Desenvolvimento local SEM ngrok: SERVER_URL="http://localhost:5000"
#   → No Google Cloud Console adicione: http://localhost:5000/auth/google/callback
# Com ngrok (acesso externo): SERVER_URL="https://SEU_SUBDOMINIO.ngrok-free.app"
#   → Rode "ngrok http 5000" e use a URL gerada; adicione no Console: https://SEU_SUBDOMINIO.ngrok-free.app/auth/google/callback
SERVER_URL="http://localhost:5000"

# Origem do frontend (para onde o backend redireciona após login Google)
# Web local: FRONT_ORIGIN="http://localhost:3000" ou a porta do Flutter web (ex.: http://localhost:xxxx)
FRONT_ORIGIN="http://localhost:3000"

# Configurações do Google OAuth
GOOGLE_CLIENT_ID="your-google-web-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
# Cliente Android (para login mobile via google_sign_in - token com audience Android)
GOOGLE_ANDROID_CLIENT_ID="your-google-android-client-id"